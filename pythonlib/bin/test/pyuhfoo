#!/usr/bin/python -Wall

# ================================================================
# John Kerl
# kerl.john.r@gmail.com
# 2007-05-20
#
# Uses Householder transformations to factor a square matrix A
# into Q*R where Q is orthogonal and R is upper-triangular.
# ================================================================

import sys
from sackmat_m import *

argc = len(sys.argv)
if (argc != 2):
	print >> sys.stderr, "Usage: %s {A file name}" % (sys.argv[0])
	sys.exit(1)

A_file_name = sys.argv[1]

A = read_matrix(float, A_file_name)
n = A.square_dim()
A.printp("A")
A.upper_hessenberg_pass_on_submatrix(0)
A.printp("A0")
A.upper_hessenberg_pass_on_submatrix(1)
A.printp("A1")
A.upper_hessenberg_pass_on_submatrix(2)
A.printp("A2")
